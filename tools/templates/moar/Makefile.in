	$(CP) @nfp($(M_STAGE2_DIR)/$(QREGEX_MOAR))@ $(M_STAGE0_DIR)
	$(CP) @nfp($(M_STAGE2_DIR)/$(HLL_MOAR))@ $(M_STAGE0_DIR)
	$(CP) @nfp($(M_STAGE2_DIR)/$(MASTOPS_MOAR))@ $(M_STAGE0_DIR)
	$(CP) @nfp($(M_STAGE2_DIR)/$(MASTNODES_MOAR))@ $(M_STAGE0_DIR)
	$(CP) @nfp($(M_STAGE2_DIR)/$(QAST_MOAR))@ $(M_STAGE0_DIR)
	$(CP) @nfp($(M_STAGE2_DIR)/$(P6QREGEX_MOAR))@ $(M_STAGE0_DIR)

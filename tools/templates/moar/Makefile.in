$(P5QREGEX_MOAR): $(P5QREGEX_SOURCES) $(NQP_MOAR) $(M_RUNNER)
	$(MKPATH) @nfp($(M_STAGE2_DIR)/gen)@
	$(PERL) @script(gen-cat.pl)@ moar $(P5QREGEX_SOURCES) > @nfp($(M_STAGE2_DIR)/$(P5QREGEX_COMBINED))@
	.@slash@$(M_RUNNER) --target=mbc --output=$(P5QREGEX_MOAR) \
	    @nfp($(M_STAGE2_DIR)/$(P5QREGEX_COMBINED))@

m-bootstrap-files: $(M_STAGE2_OUTPUT)
	$(CP) @nfp($(M_STAGE2_DIR)/$(NQP_MO_MOAR))@ $(M_STAGE0_DIR)
	$(CP) @nfp($(M_STAGE2_DIR)/$(MODULE_LOADER_MOAR))@ $(M_STAGE0_DIR)

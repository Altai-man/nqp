BAT    = @bat@
JAVA   = java
JAVAC  = javac
JAR    = jar
J_RUNNER = nqp-j$(BAT)

NQP_JAR_DIR = @nfp($(NQP_LANG_DIR)/runtime)@
JVM_BUILD_DIR = @nfp(gen/jvm)@

RUNTIME_JAVAS = \
  @nfp(src/vm/jvm/runtime/org/perl6/nqp/io/*.java)@ \
  @nfp(src/vm/jvm/runtime/org/perl6/nqp/jast2bc/*.java)@ \
  @nfp(src/vm/jvm/runtime/org/perl6/nqp/runtime/*.java)@ \
  @nfp(src/vm/jvm/runtime/org/perl6/nqp/sixmodel/*.java)@ \
  @nfp(src/vm/jvm/runtime/org/perl6/nqp/sixmodel/reprs/*.java)@ \
  @nfp(src/vm/jvm/runtime/org/perl6/nqp/tools/*.java)@ \

RUNTIME_JAR = nqp-runtime.jar

ASM = @asm@
ASMTREE = @asmtree@
JLINE = @jline@
JNA = @jna@
THIRDPARTY_JARS = $(ASM)@cpsep@$(ASMTREE)@cpsep@$(JLINE)@cpsep@$(JNA)
J_STAGE0_DIR = @jvm_stage0@
J_STAGE1_DIR = @nfp($(JVM_BUILD_DIR)/stage1)@
J_STAGE2_DIR = @nfp($(JVM_BUILD_DIR)/stage2)@

J_STAGE0_NQP = $(JAVA) -cp $(J_STAGE0_DIR) -Xbootclasspath/a:$(J_STAGE0_DIR)@cpsep@nqp-runtime.jar@cpsep@$(THIRDPARTY_JARS)@cpsep@$(J_STAGE0_DIR)@slash@nqp.jar nqp --bootstrap
J_STAGE1_NQP = $(JAVA) -cp $(J_STAGE1_DIR) -Xbootclasspath/a:$(J_STAGE1_DIR)@cpsep@nqp-runtime.jar@cpsep@$(THIRDPARTY_JARS)@cpsep@$(J_STAGE1_DIR)@slash@nqp.jar nqp --bootstrap

NQP_MO_JAR      = nqpmo.jar

MODULE_LOADER_JAR   = ModuleLoader.jar

CORE_SETTING_JAR      = NQPCORE.setting.jar

QASTNODE_JAR      = QASTNode.jar

QREGEX_JAR      = QRegex.jar

HLL_JAR        = NQPHLL.jar
J_HLL_SOURCES  = @nfp(src/vm/jvm/HLL/Backend.nqp)@ $(COMMON_HLL_SOURCES)

JASTNODES_JAR      = JASTNodes.jar
JASTNODES_COMBINED = JASTNodes.nqp
JASTNODES_SOURCES  = \
  @nfp(src/vm/jvm/QAST/JASTNodes.nqp)@ \

QAST_JAR       = QAST.jar
J_QAST_SOURCES = @nfp(src/vm/jvm/QAST/Compiler.nqp)@

P6QREGEX_JAR      = NQPP6QRegex.jar

P5QREGEX_JAR      = NQPP5QRegex.jar

EVAL_CLIENT = @nfp(tools/jvm/eval-client.pl)@

NQP_JAR      = nqp.jar
J_NQP_SOURCES= @nfp(src/vm/jvm/NQP/Ops.nqp)@ $(COMMON_NQP_SOURCES)

J_SOURCES = \
  $(COMMON_SOURCES) \
  $(J_QAST_SOURCES) \
  $(J_HLL_SOURCES) \
  $(J_NQP_SOURCES) \
  @nfp(src/vm/jvm/ModuleLoader.nqp)@ \

J_STAGE1_OUTPUT = \
  @nfp($(J_STAGE1_DIR)/$(NQP_MO_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(MODULE_LOADER_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(CORE_SETTING_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(QASTNODE_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(QREGEX_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(HLL_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(JASTNODES_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(QAST_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(P6QREGEX_JAR))@ \
  @nfp($(J_STAGE1_DIR)/$(NQP_JAR))@ \

J_STAGE2_OUTPUT = \
  @nfp($(J_STAGE2_DIR)/$(NQP_MO_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(MODULE_LOADER_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(CORE_SETTING_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(QASTNODE_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(QREGEX_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(HLL_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(JASTNODES_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(QAST_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(P6QREGEX_JAR))@ \
  @nfp($(J_STAGE2_DIR)/$(NQP_JAR))@ \

ALL_OUTPUT = \
  $(NQP_MO_JAR) \
  $(MODULE_LOADER_JAR) \
  $(CORE_SETTING_JAR) \
  $(QASTNODE_JAR) \
  $(QREGEX_JAR) \
  $(HLL_JAR) \
  $(JASTNODES_JAR) \
  $(QAST_JAR) \
  $(P6QREGEX_JAR) \
  $(NQP_JAR) \

j-all: $(ALL_OUTPUT) $(J_RUNNER) $(P5QREGEX_JAR)

j-install: j-all
	$(MKPATH) $(DESTDIR)$(BIN_DIR)
	$(MKPATH) $(DESTDIR)$(NQP_JAR_DIR)
	$(MKPATH) $(DESTDIR)$(NQP_LIB_DIR)
	$(CP) $(ASM) $(ASMTREE) $(DESTDIR)$(NQP_JAR_DIR)
	$(CP) $(JLINE) $(JNA) $(DESTDIR)$(NQP_JAR_DIR)
	$(CP) $(RUNTIME_JAR) $(DESTDIR)$(NQP_JAR_DIR)
	$(CP) $(NQP_MO_JAR) $(MODULE_LOADER_JAR) $(DESTDIR)$(NQP_LIB_DIR)
	$(CP) $(CORE_SETTING_JAR) $(QASTNODE_JAR) $(QREGEX_JAR) $(DESTDIR)$(NQP_LIB_DIR)
	$(CP) $(HLL_JAR) $(JASTNODES_JAR) $(QAST_JAR) $(P6QREGEX_JAR) $(DESTDIR)$(NQP_LIB_DIR)
	$(CP) $(NQP_JAR) $(P5QREGEX_JAR) $(DESTDIR)$(NQP_LIB_DIR)
	$(CP) $(EVAL_CLIENT) $(DESTDIR)$(BIN_DIR)
	$(CHMOD) 0755 @nfp($(DESTDIR)$(BIN_DIR)/eval-client.pl)@
	$(PERL) @script(install-jvm-runner.pl)@ "$(DESTDIR)" $(PREFIX)

$(RUNTIME_JAR): $(RUNTIME_JAVAS) @script(gen-jvm-properties.pl)@
	$(PERL) -MExtUtils::Command -e mkpath bin
	$(JAVAC) -source 1.8 -cp $(THIRDPARTY_JARS) -g -d bin -encoding UTF8 $(RUNTIME_JAVAS)
	$(PERL) @script(gen-jvm-properties.pl)@ . $(THIRDPARTY_JARS) > jvmconfig.properties
	$(PERL) @script(gen-jvm-properties.pl)@ @prefix@ $(THIRDPARTY_JARS) > @nfp(bin/jvmconfig.properties)@
	$(JAR) cf0 nqp-runtime.jar -C @nfp(bin/)@ .

J_CLEANUPS = *.class *.jar $(J_STAGE1_DIR) $(J_STAGE2_DIR) bin nqp nqp.bat jvmconfig.properties $(J_RUNNER)

j-clean:
	$(RM_RF) $(J_CLEANUPS)

$(J_STAGE0_DIR): $(RUNTIME_JAR)

$(J_STAGE1_DIR): $(J_STAGE1_OUTPUT)

@nfp($(J_STAGE1_DIR)/$(NQP_MO_JAR):)@ $(J_STAGE0_DIR) $(NQP_MO_SOURCES)
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(NQP_MO_SOURCES) > @nfp($(J_STAGE1_DIR)/$(NQP_MO_COMBINED))@
	$(J_STAGE0_NQP) --setting=NULL --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(NQP_MO_JAR))@ @nfp($(J_STAGE1_DIR)/$(NQP_MO_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(MODULE_LOADER_JAR):)@ $(J_STAGE0_DIR) @nfp(src/vm/jvm/ModuleLoader.nqp)@
	$(J_STAGE0_NQP) --setting=NULL --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(MODULE_LOADER_JAR))@ @nfp(src/vm/jvm/ModuleLoader.nqp)@

@nfp($(J_STAGE1_DIR)/$(CORE_SETTING_JAR):)@ $(J_STAGE0_DIR) $(CORE_SETTING_SOURCES) @nfp($(J_STAGE1_DIR)/$(NQP_MO_JAR))@ @nfp($(J_STAGE1_DIR)/$(MODULE_LOADER_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(CORE_SETTING_SOURCES) > @nfp($(J_STAGE1_DIR)/$(CORE_SETTING_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting=NULL --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(CORE_SETTING_JAR))@ @nfp($(J_STAGE1_DIR)/$(CORE_SETTING_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(QASTNODE_JAR):)@ $(J_STAGE0_DIR) $(QASTNODE_SOURCES) @nfp($(J_STAGE1_DIR)/$(CORE_SETTING_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(QASTNODE_SOURCES) > @nfp($(J_STAGE1_DIR)/$(QASTNODE_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(QASTNODE_JAR))@ @nfp($(J_STAGE1_DIR)/$(QASTNODE_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(QREGEX_JAR):)@ $(J_STAGE0_DIR) $(QREGEX_SOURCES) @nfp($(J_STAGE1_DIR)/$(QASTNODE_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(QREGEX_SOURCES) > @nfp($(J_STAGE1_DIR)/$(QREGEX_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(QREGEX_JAR))@ @nfp($(J_STAGE1_DIR)/$(QREGEX_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(HLL_JAR):)@ $(J_STAGE0_DIR) $(J_HLL_SOURCES) @nfp($(J_STAGE1_DIR)/$(QREGEX_JAR))@ @nfp($(J_STAGE1_DIR)/$(JASTNODES_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(J_HLL_SOURCES) > @nfp($(J_STAGE1_DIR)/$(HLL_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(HLL_JAR))@ @nfp($(J_STAGE1_DIR)/$(HLL_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(JASTNODES_JAR):)@ $(J_STAGE0_DIR) $(JASTNODES_SOURCES) @nfp($(J_STAGE1_DIR)/$(CORE_SETTING_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(JASTNODES_SOURCES) > @nfp($(J_STAGE1_DIR)/$(JASTNODES_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(JASTNODES_JAR))@ @nfp($(J_STAGE1_DIR)/$(JASTNODES_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(QAST_JAR):)@ $(J_STAGE0_DIR) $(J_QAST_SOURCES) @nfp($(J_STAGE1_DIR)/$(HLL_JAR))@ @nfp($(J_STAGE1_DIR)/$(JASTNODES_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(J_QAST_SOURCES) > @nfp($(J_STAGE1_DIR)/$(QAST_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(QAST_JAR))@ @nfp($(J_STAGE1_DIR)/$(QAST_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(P6QREGEX_JAR):)@ $(J_STAGE0_DIR) $(P6QREGEX_SOURCES) @nfp($(J_STAGE1_DIR)/$(QAST_JAR))@
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(P6QREGEX_SOURCES) > @nfp($(J_STAGE1_DIR)/$(P6QREGEX_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar --stable-sc=stage1 \
	    @nfp(--output=$(J_STAGE1_DIR)/$(P6QREGEX_JAR))@ @nfp($(J_STAGE1_DIR)/$(P6QREGEX_COMBINED))@

@nfp($(J_STAGE1_DIR)/$(NQP_JAR):)@ $(J_STAGE0_DIR) @nfp($(J_STAGE1_DIR)/$(P6QREGEX_JAR))@ $(J_SOURCES)
	$(MKPATH) $(J_STAGE1_DIR)
	$(PERL) @script(gen-version.pl)@ $(PREFIX) $(NQP_LIB_DIR) > @nfp($(J_STAGE1_DIR)/nqp-config.nqp)@
	$(PERL) @script(gen-cat.pl)@ jvm $(J_NQP_SOURCES) @nfp($(J_STAGE1_DIR)/nqp-config.nqp)@ > @nfp($(J_STAGE1_DIR)/$(NQP_COMBINED))@
	$(J_STAGE0_NQP) --module-path=$(J_STAGE1_DIR) --setting-path=$(J_STAGE1_DIR) \
	    --setting=NQPCORE --target=jar --no-regex-lib --stable-sc=stage1 --javaclass=nqp \
	    @nfp(--output=$(J_STAGE1_DIR)/$(NQP_JAR))@ @nfp($(J_STAGE1_DIR)/$(NQP_COMBINED))@

$(J_STAGE2_DIR): $(J_STAGE2_OUTPUT)

@nfp($(J_STAGE2_DIR)/$(NQP_MO_JAR):)@ $(J_STAGE1_DIR) $(NQP_MO_SOURCES)
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(NQP_MO_SOURCES) > @nfp($(J_STAGE2_DIR)/$(NQP_MO_COMBINED))@
	$(J_STAGE1_NQP) --setting=NULL --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(NQP_MO_JAR))@ @nfp($(J_STAGE2_DIR)/$(NQP_MO_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(MODULE_LOADER_JAR):)@ $(J_STAGE1_DIR) @nfp(src/vm/jvm/ModuleLoader.nqp)@
	$(J_STAGE1_NQP) --setting=NULL --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(MODULE_LOADER_JAR))@ @nfp(src/vm/jvm/ModuleLoader.nqp)@

@nfp($(J_STAGE2_DIR)/$(CORE_SETTING_JAR):)@ $(J_STAGE1_DIR) $(CORE_SETTING_SOURCES) @nfp($(J_STAGE2_DIR)/$(NQP_MO_JAR))@ @nfp($(J_STAGE2_DIR)/$(MODULE_LOADER_JAR))@
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(CORE_SETTING_SOURCES) > @nfp($(J_STAGE2_DIR)/$(CORE_SETTING_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting=NULL --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(CORE_SETTING_JAR))@ @nfp($(J_STAGE2_DIR)/$(CORE_SETTING_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(QASTNODE_JAR):)@ $(J_STAGE1_DIR) $(QASTNODE_SOURCES) @nfp($(J_STAGE2_DIR)/$(CORE_SETTING_JAR))@
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(QASTNODE_SOURCES) > @nfp($(J_STAGE2_DIR)/$(QASTNODE_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(QASTNODE_JAR))@ @nfp($(J_STAGE2_DIR)/$(QASTNODE_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(QREGEX_JAR):)@ $(J_STAGE1_DIR) $(QREGEX_SOURCES) @nfp($(J_STAGE2_DIR)/$(QASTNODE_JAR))@
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(QREGEX_SOURCES) > @nfp($(J_STAGE2_DIR)/$(QREGEX_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(QREGEX_JAR))@ @nfp($(J_STAGE2_DIR)/$(QREGEX_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(HLL_JAR):)@ $(J_STAGE1_DIR) $(J_HLL_SOURCES) @nfp($(J_STAGE2_DIR)/$(QREGEX_JAR))@ @nfp($(J_STAGE2_DIR)/$(JASTNODES_JAR))@
	$(MKPATH) @nfp($(J_STAGE2_DIR)/gen)@
	$(PERL) @script(gen-cat.pl)@ jvm $(J_HLL_SOURCES) > @nfp($(J_STAGE2_DIR)/$(HLL_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(HLL_JAR))@ @nfp($(J_STAGE2_DIR)/$(HLL_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(JASTNODES_JAR):)@ $(J_STAGE1_DIR) $(JASTNODES_SOURCES) @nfp($(J_STAGE2_DIR)/$(CORE_SETTING_JAR))@
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(JASTNODES_SOURCES) > @nfp($(J_STAGE2_DIR)/$(JASTNODES_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(JASTNODES_JAR))@ @nfp($(J_STAGE2_DIR)/$(JASTNODES_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(QAST_JAR):)@ $(J_STAGE1_DIR) $(J_QAST_SOURCES) @nfp($(J_STAGE2_DIR)/$(HLL_JAR))@ @nfp($(J_STAGE2_DIR)/$(JASTNODES_JAR))@
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(J_QAST_SOURCES) > @nfp($(J_STAGE2_DIR)/$(QAST_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(QAST_JAR))@ @nfp($(J_STAGE2_DIR)/$(QAST_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(P6QREGEX_JAR):)@ $(J_STAGE1_DIR) $(P6QREGEX_SOURCES) @nfp($(J_STAGE2_DIR)/$(QAST_JAR))@
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(P6QREGEX_SOURCES) > @nfp($(J_STAGE2_DIR)/$(P6QREGEX_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --no-regex-lib --target=jar \
	    @nfp(--output=$(J_STAGE2_DIR)/$(P6QREGEX_JAR))@ @nfp($(J_STAGE2_DIR)/$(P6QREGEX_COMBINED))@

@nfp($(J_STAGE2_DIR)/$(NQP_JAR):)@ $(J_STAGE1_DIR) @nfp($(J_STAGE2_DIR)/$(P6QREGEX_JAR))@ $(J_SOURCES)
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-version.pl)@ $(PREFIX) $(NQP_LIB_DIR) > @nfp($(J_STAGE2_DIR)/nqp-config.nqp)@
	$(PERL) @script(gen-cat.pl)@ jvm $(J_NQP_SOURCES) @nfp($(J_STAGE2_DIR)/nqp-config.nqp)@ > @nfp($(J_STAGE2_DIR)/$(NQP_COMBINED))@
	$(J_STAGE1_NQP) --module-path=$(J_STAGE2_DIR) --setting-path=$(J_STAGE2_DIR) \
	    --setting=NQPCORE --target=jar --no-regex-lib --javaclass=nqp \
	    @nfp(--output=$(J_STAGE2_DIR)/$(NQP_JAR))@ @nfp($(J_STAGE2_DIR)/$(NQP_COMBINED))@

$(ALL_OUTPUT): $(J_STAGE2_OUTPUT)
	$(CP) @nfp($(J_STAGE2_DIR)/$(NQP_MO_JAR))@ @nfp($(J_STAGE2_DIR)/$(MODULE_LOADER_JAR))@ .
	$(CP) @nfp($(J_STAGE2_DIR)/$(CORE_SETTING_JAR))@ @nfp($(J_STAGE2_DIR)/$(QASTNODE_JAR))@ .
	$(CP) @nfp($(J_STAGE2_DIR)/$(QREGEX_JAR))@ @nfp($(J_STAGE2_DIR)/$(HLL_JAR))@ @nfp($(J_STAGE2_DIR)/$(JASTNODES_JAR))@ .
	$(CP) @nfp($(J_STAGE2_DIR)/$(QAST_JAR))@ @nfp($(J_STAGE2_DIR)/$(P6QREGEX_JAR))@ @nfp($(J_STAGE2_DIR)/$(NQP_JAR))@ .

$(J_RUNNER): @nfp(src/vm/jvm/runners/$(J_RUNNER))@
	$(CP) @nfp(src/vm/jvm/runners/$(J_RUNNER))@ .
	$(CHMOD) 755 $(J_RUNNER)

j-runner-default: j-all
	$(CP) $(J_RUNNER) nqp$(BAT)
	$(CHMOD) 755 nqp$(BAT)

j-runner-default-install: j-runner-default j-install
	$(CP) @nfp($(DESTDIR)$(BIN_DIR)/$(J_RUNNER))@ @nfp($(DESTDIR)$(BIN_DIR)/nqp$(BAT))@
	$(CHMOD) 755 @nfp($(DESTDIR)$(BIN_DIR)/nqp$(BAT))@

$(P5QREGEX_JAR): $(ALL_OUTPUT) $(P5QREGEX_SOURCES)
	$(MKPATH) $(J_STAGE2_DIR)
	$(PERL) @script(gen-cat.pl)@ jvm $(P5QREGEX_SOURCES) > @nfp($(J_STAGE2_DIR)/$(P5QREGEX_COMBINED))@
	.@slash@$(J_RUNNER) --target=jar --output=$(P5QREGEX_JAR) \
	    @nfp($(J_STAGE2_DIR)/$(P5QREGEX_COMBINED))@

j-bootstrap-files: $(J_STAGE2_OUTPUT)
	$(CP) @nfp($(J_STAGE2_DIR)/$(NQP_MO_JAR))@ $(J_STAGE0_DIR)
	$(CP) @nfp($(J_STAGE2_DIR)/$(MODULE_LOADER_JAR))@ $(J_STAGE0_DIR)

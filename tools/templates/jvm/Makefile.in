@bpv(ASTNODES_SOURCES)@	= @nfp(src/vm/jvm/QAST/JASTNodes.nqp)@

@bpv(NQP_SOURCES_EXTRA)@ = @nfp(src/vm/@backend@/NQP/Ops.nqp)@


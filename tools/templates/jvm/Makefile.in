@include(Makefile-backend-common)@

@bpm(STAGE0_DIR)@: @bsm(RUNTIME)@

j-all:: @bsm(NQP)@ @bpm(BUILD_RUNNER)@ $(P5QREGEX_JVM)

j-dirs::
	@noecho@$(MKPATH) @q(@bpm(RUNNER_JAR_DIR)@)@ @q(@bpm(RUNNER_LIB_DIR)@)@

j-install: j-all
	$(MKPATH) @q($(DESTDIR)$(BIN_DIR))@
	$(MKPATH) @q($(DESTDIR)$(NQP_JAR_DIR))@
	$(MKPATH) @q($(DESTDIR)$(NQP_LIB_DIR))@
	$(CP) @q($(ASM))@ @q($(ASMTREE))@ @q($(DESTDIR)$(NQP_JAR_DIR))@
	$(CP) @q($(JLINE))@ @q($(JNA))@ @q($(DESTDIR)$(NQP_JAR_DIR))@
	$(CP) @q($(RUNTIME_JVM))@ @q($(DESTDIR)$(NQP_JAR_DIR))@
	$(CP) @q($(NQP_MO_JVM))@ @q($(MODULE_LOADER_JVM))@ @q($(DESTDIR)$(NQP_LIB_DIR))@
	$(CP) @q($(CORE_SETTING_JVM))@ @q($(QASTNODE_JVM))@ $(QREGEX_JVM) @q($(DESTDIR)$(NQP_LIB_DIR))@
	$(CP) @q($(HLL_JVM))@ @q($(JASTNODES_JVM))@ @q($(QAST_JVM))@ $(P6QREGEX_JVM) @q($(DESTDIR)$(NQP_LIB_DIR))@
	$(CP) @q($(NQP_JVM))@ @q($(P5QREGEX_JVM))@ @q($(DESTDIR)$(NQP_LIB_DIR))@
	$(CP) @q(@bpm(EVAL_CLIENT)@)@ @q($(DESTDIR)$(BIN_DIR))@
	$(CHMOD) 0755 @nfpq($(DESTDIR)$(BIN_DIR)/eval-client.pl)@
	$(CONFIGURE) --expand=nqp-j --out=@nfpq($(DESTIR)$(PREFIX)/bin/$(J_BUILD_RUNNER))@ \
				 --set-var=ctx_subdir=@shquot(@backend_subdir@)@ \
				 --set-var=jar_dir=@q($(DESTIR)$(NQP_JAR_DIR))@ \
				 --set-var=lib_dir=@q($(DESTIR)$(NQP_LIB_DIR))@ \
				 --set-var=cur_dir=@q()@
	$(CHMOD) 755 @nfpq($(DESTIR)$(PREFIX)/bin/$(J_BUILD_RUNNER))@

@bsm(RUNTIME)@: $(RUNTIME_JAVAS) @mkquot(@script(gen-jvm-properties.pl)@)@
	@echo(+++ Preparing Java runtime)@
	@noecho@$(MKPATH) bin
	@noecho@$(JAVAC) --release 9 -cp @q($(THIRDPARTY_JARS))@ -g -d bin -encoding UTF8 $(RUNTIME_JAVAS)
	@noecho@$(PERL5) @shquot(@script(gen-jvm-properties.pl)@)@ . @q($(THIRDPARTY_JARS))@ > jvmconfig.properties
	@noecho@$(PERL5) @shquot(@script(gen-jvm-properties.pl)@)@ @nfpq(@prefix@)@ @q($(THIRDPARTY_JARS))@ > @nfpq(bin/jvmconfig.properties)@
	@noecho@$(JAR) cf0 nqp-runtime.jar -C @nfp(bin/)@ .

J_CLEANUPS = *.class *.jar @q($(J_STAGE1_DIR))@ @q($(J_STAGE2_DIR))@ bin nqp nqp.bat jvmconfig.properties @q($(J_BUILD_RUNNER))@

j-clean:
	$(RM_RF) $(J_CLEANUPS)


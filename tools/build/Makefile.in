QREGEX_COMBINED = QRegex.nqp
QREGEX_PIR = QRegex.pir
QREGEX_PBC = QRegex.pbc
QREGEX_SOURCES = \
  src/QRegex.nqp \
  src/QAST/Node.nqp \
  src/QAST/Regex.nqp \
  src/QAST/Compiler.nqp \
  src/QRegex/Cursor.nqp \
